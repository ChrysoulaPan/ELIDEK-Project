</script>

<script>
    let ev = [], ev_pr = [], len, y = [], d = [];

    function Filter() {
      var inputY, filterY, tableY, inputD, filterD, tableD, tr, td, i, index;
      inputY = document.getElementById("YearList");
      filterY = input.value;
      tableY = document.getElementById("ProjTable");
      inputD = document.getElementById("DurationList");
      filterD = input.value;
      tableD = document.getElementById("ProjTable");
      tr = table.getElementsByTagName("tr");
      for (i = 1; i < tr.length; i++) {
        td = tr[i].getElementsByTagName("td")[0];
        if (td) {
            if (filterY == 0 || filterD == 0) {
                tr[i].style.display = "";
            }
            index = (td.textContent || td.innerText) - 1;
            if ((y[index] == filterY || filterY == 0) && (Math.floor(d[index]/365) == filterD || filterD == 0)) { 
                tr[i].style.display = "";
            } 
            else {
                tr[i].style.display = "none";
            }
        }       
      }
    }

</script>

<body>  

