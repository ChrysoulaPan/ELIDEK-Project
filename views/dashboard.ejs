<script>
    function SelYear() {  
        var mylistY = document.getElementById("YearList");  
        document.getElementById("selectedY").value = mylistY.options[mylistY.selectedIndex].text;
        Filter(); 

    }
    function SelDuration() {  
        var mylistD = document.getElementById("DurationList");  
        document.getElementById("selectedD").value = mylistD.options[mylistD.selectedIndex].text; 
        Filter(); 
    }
    function SelExecutive() {  
        var mylistE = document.getElementById("ExecutiveList");  
        document.getElementById("selectedE").value = mylistE.options[mylistE.selectedIndex].text; 
        myFunction(); 
