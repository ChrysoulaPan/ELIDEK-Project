<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
</head>

<body>
    <div class="container">
        <div class="row" id="row">
            <div class="col-md-12">
                <div class="card" id="card-container">
                    <div class="card-body" id="card">
                    <% if (researcher.length == 0) { %> 
                        <h1 style="margin-top: 5rem;">No researchers found!</h1>
                    <% } else { %>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Surname</th>
                                        <th>Birth Date</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% researcher.forEach((researcher, _) => { %>
                                        <tr>
                                            <td><%= researcher.researcher_id %></td>
                                            <td><%= researcher.researcher_name %></td>
                                            <td><%= researcher.researcher_surname %></td>
                                            <td><%= researcher.birth_date %></td>
                                            <form method="POST" action="/researcher/delete/<%= researcher.researcher_id %>">
                                                <td> 
                                                    <button style="all: unset; cursor: pointer;" type="submit"><i class="fa fa-trash"></i></button>
                                                </td>
                                            </form>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>